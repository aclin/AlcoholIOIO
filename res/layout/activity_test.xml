<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity" >

    <Button
        android:id="@+id/test_less_0_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="test_less_0_01" />

    <Button
        android:id="@+id/test_more_0_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_less_0_01"
        android:layout_centerHorizontal="true"
        android:text="test_more_0_01" />

    <Button
        android:id="@+id/test_more_0_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_more_0_01"
        android:layout_centerHorizontal="true"
        android:text="test_more_0_1" />
    <Button
        android:id="@+id/test_more_0_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_more_0_1"
        android:layout_centerHorizontal="true"
        android:text="test_more_0_25" />
    
</RelativeLayout>