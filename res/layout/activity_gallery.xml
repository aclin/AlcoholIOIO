<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gallery_background"
    tools:context=".StoryActivity" >
    
    
     <RelativeLayout
        android:id = "@+id/gallery_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#55000000"
        android:layout_alignParentTop="true">
        <TextView
            android:id = "@+id/gallery_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="28sp"
            android:text="歷史紀錄" 
            android:gravity="center"
            android:textColor="#FFFFFFFF"/>
        
    </RelativeLayout>
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_centerInParent="true">
    	<Gallery
        	android:id="@+id/gallery_list"
        	android:layout_width="match_parent"
        	android:layout_height="420dp"
        	android:layout_centerInParent="true"
        	android:spacing="12dp"
        	/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/gallery_controlbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alpha="0.8"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:scrollbars="none" 
        >

    <Button
        android:id="@+id/gallery_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:enabled="false"
        android:text="上一頁"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/gallery_cur_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="3"
        android:inputType="number"
        android:textColor="#FF000000"
        android:textSize="18sp" >

    </EditText>

        <TextView
        android:id="@+id/gallery_page_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_marginBottom="4dp"
        android:text="/" 
        android:textColor="#FF000000"/>
    
     <TextView
         android:id="@+id/gallery_page_max"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="999"
         android:textSize="24sp"
          android:textColor="#FF000000" />
     
         <Button
             android:id="@+id/gallery_next"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:clickable="false"
             android:enabled="false"
             android:text="下一頁"
             android:textSize="16sp" />
     
     </LinearLayout>
    <ImageView
        android:id="@+id/gallery_anime1"
         android:layout_width="150dp"
         android:layout_height="150dp"
	    android:scaleType="fitXY"
	    android:adjustViewBounds="true"
	    android:layout_centerInParent="true"
	    android:padding="0dp"
	    android:background="#AACCFFFF"
        />
    

</RelativeLayout>