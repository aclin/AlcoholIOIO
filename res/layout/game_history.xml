<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="523dp"
    android:background="@android:color/black"
    android:orientation="vertical" >

	<ImageView
	    android:id="@+id/gallery_background"
	    android:layout_width="300dp"
	    android:layout_height="493dp"
	    android:scaleType="fitXY"
	    android:layout_alignParentTop="true"
	 />

	
	    <ImageView
        android:id="@+id/gallery_tree"
        android:layout_width="192dp"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
         />

	    <ImageView
	        android:id="@+id/gallery_coin1"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginBottom="24dp"
	        android:layout_marginLeft="12dp"
	        android:src="@drawable/coin_n" />
    	<ImageView
	        android:id="@+id/gallery_coin2"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
	        android:layout_alignParentBottom="true"
	        android:layout_toRightOf="@+id/gallery_coin1"
	        android:layout_marginBottom="24dp"
	        android:layout_marginLeft="12dp"
	        android:src="@drawable/coin_n" />
    	<ImageView
	        android:id="@+id/gallery_coin3"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
	        android:layout_alignParentBottom="true"
	        android:layout_toRightOf="@+id/gallery_coin2"
	        android:layout_marginBottom="24dp"
	        android:layout_marginLeft="12dp"
	        android:src="@drawable/coin_n" />
    	<ImageView
	        android:id="@+id/gallery_coin4"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
	        android:layout_alignParentBottom="true"
	        android:layout_toRightOf="@+id/gallery_coin3"
	        android:layout_marginBottom="24dp"
	        android:layout_marginLeft="12dp"
	        android:src="@drawable/coin_n" />
</RelativeLayout>