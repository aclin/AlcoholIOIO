<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:orientation="vertical" >

	<ImageView
	    android:id="@+id/gallery_bg_all"
	    android:layout_width="256dp"
	    android:layout_height="420dp"
	    android:scaleType="fitXY"
	    android:adjustViewBounds="true"
	    android:layout_centerInParent="true"
	    android:src="@+drawable/background_all"
	 />
	<ImageView
	    android:id="@+id/gallery_tree"
	    android:layout_width="256dp"
	    android:layout_height="256dp"
	    android:scaleType="fitXY"
	    android:layout_marginBottom="26dp"
	    android:adjustViewBounds="true"
	    android:layout_alignLeft="@+id/gallery_bg_all"
	    android:layout_alignBottom="@+id/gallery_bg_all"
	 />
   	<TextView
   	    android:id="@+id/gallery_date"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignLeft="@+id/gallery_bg_all"
   	    android:layout_alignTop="@+id/gallery_bg_all"
   	 	android:textSize="20sp"
   	 	android:textStyle="bold"
   	 	android:textColor="#FFFFFFFF"
   	 	android:background="#44000000"
   	 />
    	
</RelativeLayout>