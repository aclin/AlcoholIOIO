<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imgCountdown"
        android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:scaleType="center" />
    
    <FrameLayout
	    android:id="@+id/camera_preview"
	    android:layout_width="150dp"
	    android:layout_height="225dp"
	    android:layout_alignParentRight="true" />
    
	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/storage_state"
	    android:id="@+id/storage_state"
	    android:layout_below="@id/imgCountdown" />
	
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/row_value"
	    android:id="@+id/row_value"
	    android:layout_below="@id/storage_state" />
	
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/voltage"
	    android:id="@+id/voltage"
	    android:layout_below="@id/row_value" />
	
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/brac"
	    android:id="@+id/brac"
	    android:layout_below="@id/voltage" />
	
	<TextView
	    android:id="@+id/tvProgress"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="Amount of data:"
	    android:layout_below="@id/brac" />
	
	<TextView
	    android:id="@+id/tvLatLng"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/tvProgress"
	    android:text="@string/waitLoc" />
	
	<!--
	<ImageView
        android:id="@+id/imgSensing"
        android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:scaleType="center"
     	android:layout_alignParentBottom="true" /> -->
     
	<ProgressBar
    	android:id="@+id/progSensing"
    	android:layout_width="fill_parent"
     	android:layout_height="wrap_content"
     	android:paddingRight="20dp"
     	android:paddingLeft="20dp"
	    android:paddingBottom="10dp"
	    android:layout_alignParentBottom="true"
	    style="@android:style/Widget.ProgressBar.Horizontal" />
 
 	<TextView
 	    android:id="@+id/tvSignal"
 	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_above="@id/progSensing"
		android:textSize="20dp"
		android:gravity="center_horizontal" />"

</RelativeLayout>
