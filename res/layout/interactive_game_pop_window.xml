<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/apple_good"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/interactive_game_pop_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />
    
    <Button
        android:id="@+id/interactive_game_pop_ok_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interactive_game_pop_text"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:text="OK"
        android:textSize="22sp" />

    <Button
        android:id="@+id/interactive_game_pop_no_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interactive_game_pop_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp"
        android:text="NO"
        android:textSize="22sp"  />

</RelativeLayout>